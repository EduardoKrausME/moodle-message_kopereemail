<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="message/output/kopereemail/db" VERSION="2026020300"
       COMMENT="XMLDB file for Moodle message/output/kopereemail"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd">
    <TABLES>

        <TABLE NAME="message_kopereemail_messages"
               COMMENT="Keeps track of group conversation messages to send in a digest">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="useridfrom" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="useridto" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="conversationid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="messageid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="useridfrom_fk" TYPE="foreign" FIELDS="useridfrom" REFTABLE="user" REFFIELDS="id"/>
                <KEY NAME="useridto_fk" TYPE="foreign" FIELDS="useridto" REFTABLE="user" REFFIELDS="id"/>
                <KEY NAME="conversationid_fk" TYPE="foreign" FIELDS="conversationid" REFTABLE="message_conversations"
                     REFFIELDS="id"/>
                <KEY NAME="messageid_fk" TYPE="foreign" FIELDS="messageid" REFTABLE="messages" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="useridto_ix" UNIQUE="false" FIELDS="useridto"/>
                <INDEX NAME="conversationid_ix" UNIQUE="false" FIELDS="conversationid"/>
                <INDEX NAME="messageid_ix" UNIQUE="false" FIELDS="messageid"/>
            </INDEXES>
        </TABLE>

        <TABLE NAME="message_kopereemail_template" COMMENT="Custom HTML templates per message provider">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="component" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="name" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="subject" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="bodyhtml" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="bodyhtmlformat" TYPE="int" LENGTH="4" NOTNULL="true" SEQUENCE="false" DEFAULT="1"/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
                <FIELD NAME="useridmodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="useridmodified_fk" TYPE="foreign" FIELDS="useridmodified" REFTABLE="user" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="provider_uix" UNIQUE="true" FIELDS="component,name"/>
                <INDEX NAME="component_ix" UNIQUE="false" FIELDS="component"/>
            </INDEXES>
        </TABLE>

    </TABLES>
</XMLDB>
