{{!
    @template message_kopereemail/placeholders

    Example context (json):
    {
        "placeholders": [
            { "key": "\{\{firstname\}\}", "desc": "User’s first name." },
            { "key": "\{\{lastname\}\}", "desc": "User’s last name." },
            { "key": "\{\{fullname\}\}", "desc": "User’s full name." },
            { "key": "\{\{email\}\}", "desc": "User’s email address." },
            { "key": "\{\{coursename\}\}", "desc": "Course name." },
            { "key": "\{\{courseid\}\}", "desc": "Course ID." },
            { "key": "\{\{groupname\}\}", "desc": "Conversation/group name." },
            { "key": "\{\{unreadcount\}\}", "desc": "Number of unread messages." },
            { "key": "\{\{digestdate\}\}", "desc": "Digest date (formatted)." },
            { "key": "\{\{siteurl\}\}", "desc": "Site URL." }
        ]
    }
}}

<h5 class="mb-2">{{#str}}placeholders_title, message_kopereemail{{/str}}</h5>
<div class="text-muted small mb-3">{{#str}}placeholders_desc, message_kopereemail{{/str}}</div>
<ul class="list-group">
    {{#placeholders}}
        <li class="list-group-item">
            <div class="fw-bold"><code>{{key}}</code></div>
            <div class="text-muted small">{{desc}}</div>
        </li>
    {{/placeholders}}
</ul>
