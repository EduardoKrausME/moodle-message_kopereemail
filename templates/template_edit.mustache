{{!
    @template message_kopereemail/template_edit

    Example context (json):
    {
        "providerlabel": "Course completed",
        "component": "core",
        "name": "coursecompleted",
        "formhtml": "<form action=\"https://moodle.example.com/admin/message_kopereemail/template_edit.php\" method=\"post\"><input type=\"hidden\" name=\"sesskey\" value=\"ABC123\"></form>",
        "placeholders": [
            {
                "key": "\{\{userfullname\}\}",
                "desc": "Recipient full name."
            },
            {
                "key": "\{\{coursename\}\}",
                "desc": "Course full name."
            }
        ]
    }
}}

<div class="row">
    <div class="col-12 col-lg-7">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <div class="fw-bold">{{#str}}template_edit_provider, message_kopereemail{{/str}}</div>
                    <div>{{providerlabel}}</div>
                    <div class="text-muted small">{{component}} / {{name}}</div>
                </div>
                {{{formhtml}}}
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-5 mt-3 mt-lg-0">
        <div class="card">
            <div class="card-body">
                <h5 class="mb-2">{{#str}}placeholders_title, message_kopereemail{{/str}}</h5>
                <div class="text-muted small mb-3">{{#str}}placeholders_desc, message_kopereemail{{/str}}</div>

                <ul class="list-group">
                    {{#placeholders}}
                        <li class="list-group-item">
                            <div class="fw-bold"><code>{{key}}</code></div>
                            <div class="text-muted small">{{desc}}</div>
                        </li>
                    {{/placeholders}}
                </ul>
            </div>
        </div>
    </div>
</div>
