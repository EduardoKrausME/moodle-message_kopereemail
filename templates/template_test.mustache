{{!
    @template message_kopereemail/template_test

    Example context (json):
    {
        "testurl": "https://example.com/preview",
        "templatename": "Welcome email",
        "wrapperhtml": "<p>Hello!</p>",
        "changuetemplateurl": "https://example.com/change",
        "templates": [
            {"name": "Template-A", "active": true},
            {"name": "Template-B", "previewurl": "https://example.com/preview?tpl=b"}
        ]
    }
}}

{{#testurl}}
    <p>
        <a class="btn btn-sm btn-warning"
           href="{{{testurl}}}">{{#str}}action_preview_click, message_kopereemail{{/str}}</a>
    </p>
{{/testurl}}

{{#wrapperhtml}}
    <div class="card">
        <div class="card-header">{{#str}}template, message_kopereemail{{/str}}: {{{templatename}}}</div>
        <div class="card-body">
            {{{wrapperhtml}}}
        </div>
        <div class="card-footer">
            <a class="btn btn-info"
               href="{{{changuetemplateurl}}}">{{#str}}template_changue, message_kopereemail{{/str}}</a>
        </div>
    </div>
{{/wrapperhtml}}

<h3 class="mt-3">{{#str}}templates_other, message_kopereemail{{/str}}</h3>

<ul class="list-unstyled mb-0">
    {{#templates}}
        {{#active}}
            <li class="mb-1">{{name}}</li>
        {{/active}}
        {{^active}}
            <li class="mb-1">
                <a class="btn btn-link p-0 {{#active}}active{{/active}}"
                   href="{{{previewurl}}}">{{name}}</a>
            </li>
        {{/active}}
    {{/templates}}
</ul>
