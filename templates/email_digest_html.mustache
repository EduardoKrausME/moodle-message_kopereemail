        "conversations": [
            {
                "grouppictureurl": "https://example.com/assets/groups/data-science-cohort-a.png",
                "groupname": "Data Science Cohort A",
                "coursename": "Intro to Python",
                "numberofunreadmessages": 3,
                "messages": [
                    {
                        "userpictureurl": "https://example.com/assets/users/alex-johnson.jpg",
                        "userfullname": "Alex Johnson",
                        "timesent": "Feb 4, 2026, 09:12",
                        "message": "Reminder: Homework 2 is due Friday. If you're stuck on loops, post your question here and we’ll help."
                    },
                    {
                        "userpictureurl": "https://example.com/assets/users/maria-santos.jpg",
                        "userfullname": "Maria Santos",
                        "timesent": "Feb 4, 2026, 10:03",
                        "message": "Does anyone have a good example of list comprehensions for filtering even numbers?"
                    }
                ]
