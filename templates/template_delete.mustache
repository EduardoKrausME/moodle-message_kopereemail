{{!
    @template message_kopereemail/template_delete

    Example context (json):
    {
        "providerlabel": "Course completed",
        "yesurl": "https://moodle.example.com/admin/message_kopereemail/template_delete.php?component=core&provider=coursecompleted&confirm=1&sesskey=ABC123",
        "nourl": "https://moodle.example.com/admin/message_kopereemail/providers.php"
    }
}}

<div class="card">
    <div class="card-body">
        <h5 class="mb-2">{{#str}}template_delete_title, message_kopereemail{{/str}}</h5>
        <div class="mb-3">
            <div class="fw-bold">{{providerlabel}}</div>
            <div class="text-muted">{{#str}}template_delete_confirm, message_kopereemail{{/str}}</div>
        </div>

        <a class="btn btn-danger me-2" href="{{yesurl}}">{{#str}}delete{{/str}}</a>
        <a class="btn btn-secondary" href="{{nourl}}">{{#str}}cancel{{/str}}</a>
    </div>
</div>
