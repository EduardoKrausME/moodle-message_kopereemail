{{!
    @template message_kopereemail/admin_providers_export_import

    Example context (json):
    {
        "exporturl": "https://moodle.example.com/exporturl.php?sesskey=ABC123",
        "importurl": "https://moodle.example.com/importurl.php"
    }
}}

<div class="message-kopereemail-admin">
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                <div>
                    <div class="text-muted small">{{#str}}templates_transfer_desc, message_kopereemail{{/str}}</div>
                </div>

                <div class="btn-group" role="group" aria-label="{{#str}}templates_transfer_title, message_kopereemail{{/str}}">
                    <a class="btn btn-sm btn-outline-primary"
                       href="{{exporturl}}">
                        {{#str}}action_export, message_kopereemail{{/str}}
                    </a>
                    <a class="btn btn-sm btn-outline-secondary"
                       href="{{importurl}}">
                        {{#str}}action_import, message_kopereemail{{/str}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
